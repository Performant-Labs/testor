{
    "name": "performant-labs/testor",
    "description": "Robo tasks that work with Automated Testing Kit",
    "type": "robo-tasks",
    "autoload": {
        "psr-4": {
            "PL\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PL\\Tests\\": "tests"
        }
    },
    "bin": [
        "testor"
    ],
    "require": {
        "php": ">=8.1",
        "consolidation/robo": "^4.0|^5.0",
        "ext-json": "*",
        "aws/aws-sdk-php": "^3.320",
        "phpseclib/phpseclib": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "mockery/mockery": "^1.6",
        "php-mock/php-mock": "^2.5",
        "php-mock/php-mock-phpunit": "^2.10",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-strict-rules": "^2.0",
        "humbug/box": "^4.6"
    },
    "scripts": {
        "test": "vendor/bin/phpunit tests"
    }
}
